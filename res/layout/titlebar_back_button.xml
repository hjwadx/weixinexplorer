<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/maintitlebar" android:layout_width="fill_parent"
	android:layout_height="44dp" android:background="@drawable/topbar"
	android:orientation="horizontal">
	
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:src="@drawable/titlebar_btn_back" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:background="@drawable/titlebar_btn_line"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="160dp"
        android:ellipsize="end"
        android:gravity="center"
        android:shadowColor="#60000000"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@drawable/white"
        android:textSize="20sp" >
    </TextView>

    <Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        android:text="添加"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>